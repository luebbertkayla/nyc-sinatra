<h1>Edit Historical Landmark</h2>
<h2>Edit <%= @landmark.id %> </h1>
    <form action="/landmarks/<%= @landmark.id %>" method="POST">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <label>Edit Landmark's Name:</label>
        <input type="text" name="landmark[name]" value="<%= @landmark.name%>" id="name">
        <br><br>
        <label>Edit Landmark's Year Completed:</label>
        <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed%>" id="year_completed">
        <br><br>
        <input type="submit" value="Edit Landmark">
    </form>
    <br>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

